hyper - q : /etc/skhd-moveWindowToDisplayAndFollowFocus.sh left
hyper - w : /etc/skhd-moveWindowToDisplayAndFollowFocus.sh right
hyper - a : yabai -m display --focus prev || yabai -m display --focus last
hyper - s : yabai -m display --focus next || yabai -m display --focus first

hyper - o : /etc/skhd-moveWindowToSpaceOnSameDisplay.sh prev
hyper - p : /etc/skhd-moveWindowToSpaceOnSameDisplay.sh next
hyper - tab : /etc/skhd-moveWindowToFirstEmptySpaceOnSameDisplay.sh

hyper - return : /etc/skhd-toggleLayoutOnCurrentSpace.sh

hyper - d : yabai -m space --toggle show-desktop
hyper - e : yabai -m space --toggle mission-control

hyper - 1 : /etc/skhd-focusFirstWindowInSpace.sh 1
hyper - 2 : /etc/skhd-focusFirstWindowInSpace.sh 2
hyper - 3 : /etc/skhd-focusFirstWindowInSpace.sh 3
hyper - 4 : /etc/skhd-focusFirstWindowInSpace.sh 4
hyper - 5 : /etc/skhd-focusFirstWindowInSpace.sh 5
hyper - 6 : /etc/skhd-focusFirstWindowInSpace.sh 6
hyper - 7 : /etc/skhd-focusFirstWindowInSpace.sh 7
hyper - 8 : /etc/skhd-focusFirstWindowInSpace.sh 8

hyper - j : yabai -m window --focus west
hyper - l : yabai -m window --focus east
hyper - i : yabai -m window --focus north
hyper - k : yabai -m window --focus south

hyper - f : yabai -m window --toggle zoom-fullscreen
hyper - tab : yabai -m window --focus recent

hyper - left  : yabai -m window --resize left:-20:0; \
                yabai -m window --resize right:-20:0;
hyper - right : yabai -m window --resize right:20:0; \
                yabai -m window --resize left:20:0;
hyper - down  : yabai -m window --resize top:0:20; \
                yabai -m window --resize bottom:0:20
hyper - up    : yabai -m window --resize bottom:0:-20; \
                yabai -m window --resize top:0:-20

hyper - space : yabai -m space --rotate 270
